<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/B-36D-Peacemaker/b36d-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/B-36D-Peacemaker/Models/b36d.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <sound>
      <path>Aircraft/B-36D-Peacemaker/Sounds/b36d-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int" n="0">0</int>
        <int type="int" n="1">0</int>
        <int type="int" n="2">0</int>
        <int type="int" n="3">0</int>
        <int type="int" n="4">0</int>
        <int type="int" n="5">0</int>
      </generic>
    </multiplay>

    <flaps>
      <setting>0.000</setting>
      <setting>0.25</setting>
      <setting>0.50</setting>
      <setting>0.75</setting>
      <setting>1.000</setting>
    </flaps>

    <help>
      <title>Consolidated B36 D Peacemaker</title>
      <key>
        <name>d</name>
        <desc>Open/Close door</desc>
      </key>
    </help>

    <menubar include="Dialogs/b36d-menu.xml"/>

  </sim>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <boost type="double">0</boost>
      <magnetos>3</magnetos>
      <rpm>500</rpm>
      <running>true</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <boost type="double">0</boost>
      <magnetos>3</magnetos>
      <rpm>500</rpm>
      <running>true</running>
    </engine>
    <engine n="2">
      <engine-num type="int">2</engine-num>
      <boost type="double">0</boost>
      <magnetos>3</magnetos>
      <rpm>500</rpm>
      <running>true</running>
    </engine>
    <engine n="3">
      <engine-num type="int">3</engine-num>
      <boost type="double">0</boost>
      <magnetos>3</magnetos>
      <rpm>500</rpm>
      <running>true</running>
    </engine>
    <engine n="4">
      <engine-num type="int">4</engine-num>
      <boost type="double">0</boost>
      <magnetos>3</magnetos>
      <rpm>500</rpm>
      <running>true</running>
    </engine>
    <engine n="5">
      <engine-num type="int">5</engine-num>
      <boost type="double">0</boost>
      <magnetos>3</magnetos>
      <rpm>500</rpm>
      <running>true</running>
    </engine>
    <engine n="6">
      <engine-num type="int">6</engine-num>
      <running>true</running>
    </engine>
    <engine n="7">
      <engine-num type="int">7</engine-num>
      <running>true</running>
    </engine>
    <engine n="8">
      <engine-num type="int">8</engine-num>
      <running>true</running>
    </engine>
    <engine n="9">
      <engine-num type="int">9</engine-num>
      <running>true</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/b36d-keyboard.xml"/>
  </input>
 
  <nasal>
    <b36d>
      <file>Aircraft/B-36D-Peacemaker/Nasal/doors.nas</file>
      <file>Aircraft/B-36D-Peacemaker/Nasal/liveries.nas</file>
    </b36d>
  </nasal>

</PropertyList>

